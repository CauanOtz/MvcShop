@{
    ViewData["Title"] = "Painel Administrativo";
}
<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">Painel Administrativo</h1>
        <a class="btn btn-outline-secondary" href="/">Voltar ao site</a>
    </div>

    <div class="row g-4">
        <div class="col-12 col-md-6">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body d-flex flex-column">
                    <div class="d-flex align-items-center mb-3">
                        <i class="fa-solid fa-box fa-2x text-primary me-3"></i>
                        <div>
                            <h5 class="card-title mb-0">Produtos</h5>
                            <small class="text-muted">Gerencie os produtos da loja</small>
                        </div>
                    </div>
                    <p class="text-muted mb-3">Listar, criar, editar e excluir produtos, gerenciar imagens e estoques.</p>
                    <div class="mt-auto d-grid gap-2 d-sm-flex justify-content-end">
                        <a class="btn btn-primary" href="/Admin/Products"><i class="fa-solid fa-list me-1"></i> Listar</a>
                        <a class="btn btn-outline-primary" href="/Admin/Products/Create"><i class="fa-solid fa-plus me-1"></i> Novo</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-md-6">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body d-flex flex-column">
                    <div class="d-flex align-items-center mb-3">
                        <i class="fa-solid fa-tags fa-2x text-success me-3"></i>
                        <div>
                            <h5 class="card-title mb-0">Categorias</h5>
                            <small class="text-muted">Organize produtos por categoria</small>
                        </div>
                    </div>
                    <p class="text-muted mb-3">Criar, editar e remover categorias para manter a vitrine organizada.</p>
                    <div class="mt-auto d-grid gap-2 d-sm-flex justify-content-end">
                        <a class="btn btn-success" href="/Admin/Categories"><i class="fa-solid fa-list me-1"></i> Listar</a>
                        <a class="btn btn-outline-success" href="/Admin/Categories/Create"><i class="fa-solid fa-plus me-1"></i> Nova</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4 mt-3">
        <div class="col-12">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body d-flex flex-column">
                    <div class="d-flex align-items-center mb-3">
                        <i class="fa-solid fa-cog fa-2x text-secondary me-3"></i>
                        <div>
                            <h5 class="card-title mb-0">Configurações</h5>
                            <small class="text-muted">Opções do sistema</small>
                        </div>
                    </div>
                    <p class="text-muted mb-3">Ajustes gerais da aplicação e preferências administrativas.</p>
                    <div class="mt-auto d-grid gap-2 d-sm-flex justify-content-end">
                        <a class="btn btn-secondary" href="/Admin/Settings"><i class="fa-solid fa-wrench me-1"></i> Abrir</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .card { border-radius: .75rem; }
    .card .fa-2x { opacity: .95; }
    .container h1 { letter-spacing: .2px; }
    .card-body { min-height: 190px; }
    @@media (max-width: 575.98px) {
        .card-body .btn { width: 100%; }
    }
</style>
