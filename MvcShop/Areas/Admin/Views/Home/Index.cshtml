@model IEnumerable<MvcShop.Models.CarouselImage>

@{
    ViewData["Title"] = "Admin Dashboard";
}

<h2>Dashboard</h2>

@if (Model != null && Model.Any())
{
    <div id="adminCarousel" class="carousel slide mb-4" data-bs-ride="carousel">
        <div class="carousel-inner">
            @for (int i = 0; i < Model.Count(); i++)
            {
                var item = Model.ElementAt(i);
                <div class="carousel-item @(i==0?"active":"")">
                    <img src="@item.ImageUrl" class="d-block w-100" style="height:300px;object-fit:cover;" />
                    @if (!string.IsNullOrEmpty(item.Title))
                    {
                        <div class="carousel-caption d-none d-md-block">
                            <h5>@item.Title</h5>
                        </div>
                    }
                </div>
            }
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#adminCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#adminCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
}
else
{
    <div class="alert alert-info">Nenhuma imagem no carrossel. <a href="/Admin/Carousel">Adicionar agora</a></div>
}
