@model MvcShop.Models.Category

@{
    ViewData["Title"] = "Nova Categoria";
}

<h2>Nova Categoria</h2>

<form asp-area="Admin" asp-controller="Categories" asp-action="Create" method="post" class="w-50">
    <div class="mb-3">
        <label class="form-label">Nome</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <button class="btn btn-primary">Criar</button>
    <a class="btn btn-secondary ms-2" href="/Admin/Categories">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
