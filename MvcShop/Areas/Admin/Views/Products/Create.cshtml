@model MvcShop.Models.Product

@{
    ViewData["Title"] = "Criar Produto";
}

<div class="card">
    <div class="card-body">
        <h3 class="card-title">Criar Produto</h3>

    @{ var categoriesSelect = new Microsoft.AspNetCore.Mvc.Rendering.SelectList(ViewBag.Categories, "Id", "Name", Model?.CategoryId); }

    <form asp-action="Create" method="post" enctype="multipart/form-data" class="price-form">
            <div class="mb-3">
                <label class="form-label">Nome</label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="mb-3">
                <label class="form-label">Descrição</label>
                <textarea asp-for="Description" class="form-control"></textarea>
            </div>
            <div class="mb-3">
                <label class="form-label">Preço</label>
                <input asp-for="Price" class="form-control price-input" />
            </div>
            <div class="mb-3">
                <label class="form-label">Categoria</label>
                <select asp-for="CategoryId" class="form-select" asp-items="@categoriesSelect">
                    <option value="">-- selecione --</option>
                </select>
            </div>
            <div class="mb-3">
                <label class="form-label">Imagem</label>
                <input type="file" name="imageFile" class="form-control" />
            </div>
            <button class="btn btn-primary">Salvar</button>
        </form>
    </div>
</div>