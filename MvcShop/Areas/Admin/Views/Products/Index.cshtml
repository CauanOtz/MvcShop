@model IEnumerable<MvcShop.Models.Product>

@{
    ViewData["Title"] = "Admin - Produtos";
}

<h2>Produtos</h2>
<p><a class="btn btn-primary" href="/Admin/Products/Create">Novo Produto</a></p>
<table class="table">
    <thead><tr><th>Nome</th><th>Categoria</th><th>Pre√ßo</th><th></th></tr></thead>
    <tbody>
    @foreach(var p in Model)
    {
        <tr>
            <td>@p.Name</td>
            <td>@p.Category?.Name</td>
            <td>@p.Price.ToString("C")</td>
            <td>
                <a class="btn btn-sm btn-secondary" href="/Admin/Products/Edit/@p.Id">Editar</a>
                <form method="post" asp-area="Admin" asp-controller="Products" asp-action="Delete" class="d-inline delete-form" data-name="@p.Name">
                    <input type="hidden" name="id" value="@p.Id" />
                    <button type="submit" class="btn btn-sm btn-danger">Excluir</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>