@model MvcShop.Models.Product

@{
    ViewData["Title"] = "Editar Produto";
}

<div class="card">
    <div class="card-body">
        <h3 class="card-title">Editar Produto</h3>

        @* Build a SelectList with current selection to avoid parsing issues in asp-items *@
    @{ var categoriesSelect = new Microsoft.AspNetCore.Mvc.Rendering.SelectList(ViewBag.Categories, "Id", "Name", Model?.CategoryId); }

    <form asp-action="Edit" method="post" enctype="multipart/form-data" class="price-form">
            <input type="hidden" asp-for="Id" />
            <div class="mb-3">
                <label class="form-label">Nome</label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="mb-3">
                <label class="form-label">Descrição</label>
                <textarea asp-for="Description" class="form-control"></textarea>
            </div>
            <div class="mb-3">
                <label class="form-label">Preço</label>
                <input asp-for="Price" class="form-control price-input" />
            </div>
            <div class="mb-3">
                <label class="form-label">Categoria</label>
                <select asp-for="CategoryId" class="form-select" asp-items="@categoriesSelect">
                    <option value="">-- selecione --</option>
                </select>
            </div>
            <div class="mb-3">
                <label class="form-label">Imagem atual</label>
                <div class="mb-2">
                    <img src="@((Model?.ImageUrl) ?? "/uploads/placeholder.png")" style="max-width:200px;" class="img-thumbnail" />
                </div>
                <label class="form-label">Alterar imagem</label>
                <input type="file" name="imageFile" class="form-control" />
            </div>
            <button class="btn btn-primary">Salvar</button>
            <a class="btn btn-secondary ms-2" href="/Admin/Products">Cancelar</a>
        </form>
    </div>
</div>
