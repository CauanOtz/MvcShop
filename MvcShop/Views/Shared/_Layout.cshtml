<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MvcShop</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <!-- Marca à esquerda -->
            <a class="navbar-brand me-3 order-1" href="/">MvcShop</a>

            <!-- Botão toggler (mobile) -->
            <button class="navbar-toggler order-2" type="button" data-bs-toggle="collapse" data-bs-target="#navMenu">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Links centralizados -->
            <div class="collapse navbar-collapse justify-content-center order-3" id="navMenu">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Products">Produtos</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Home/Contacts">Contatos</a></li>
                </ul>
            </div>

            <!-- Área direita: carrinho + usuário -->
            <div class="d-flex align-items-center ms-auto order-4">
                <!-- Ícone do carrinho -->
                <a class="btn btn-link text-decoration-none me-2 fs-4" href="/Cart" title="Carrinho">
                    <i class="fa-solid fa-cart-shopping" aria-hidden="true"></i>
                    <span class="visually-hidden">Carrinho</span>
                </a>

                <!-- Avatar do usuário com dropdown -->
                <div class="dropdown">
                    <a href="#" class="d-flex align-items-center text-decoration-none dropdown-toggle" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        <img src="https://ui-avatars.com/api/?name=Usu%C3%A1rio&background=0D6EFD&color=fff&rounded=true" alt="Usuário" width="36" height="36" class="rounded-circle" />
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                        <li><a class="dropdown-item" href="/Admin/Home"><i class="fa-solid fa-tachometer-alt me-2"></i>Menu Admin</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="/Account/Options"><i class="fa-solid fa-gear me-2"></i>Opções</a></li>
                        <li><a class="dropdown-item" href="/Account/Logout"><i class="fa-solid fa-right-from-bracket me-2"></i>Logout</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    @if (TempData["Success"] != null || TempData["Error"] != null)
    {
        <script>
            document.addEventListener('DOMContentLoaded', function () {
                var s = '@(TempData["Success"] ?? "")'.trim();
                var e = '@(TempData["Error"] ?? "")'.trim();
                if (s) {
                    Swal.fire({icon: 'success', title: 'Sucesso', text: s, timer: 2000, showConfirmButton: false});
                } else if (e) {
                    Swal.fire({icon: 'error', title: 'Erro', text: e, timer: 3000, showConfirmButton: true});
                }
            });
        </script>
    }

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/cleave.js@1.6.0/dist/cleave.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            document.querySelectorAll('.price-input').forEach(function (el) {
                try {
                    el.cleave = new Cleave(el, {
                        numeral: true,
                        numeralDecimalMark: '.',
                        delimiter: ',',
                        numeralDecimalScale: 2,
                        numeralThousandsGroupStyle: 'thousand'
                    });
                } catch (e) { }
            });

            document.querySelectorAll('form.price-form').forEach(function (form) {
                form.addEventListener('submit', function () {
                    form.querySelectorAll('.price-input').forEach(function (inp) {
                        if (inp && inp.cleave && typeof inp.cleave.getRawValue === 'function') {
                            inp.value = inp.cleave.getRawValue();
                        } else if (inp) {
                            // fallback: remove thousand separators and spaces
                            inp.value = inp.value.replace(/[,\s]/g, '');
                        }
                    });
                });
            });
        });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            document.querySelectorAll('.delete-form').forEach(function (form) {
                form.addEventListener('submit', function (ev) {
                    ev.preventDefault();
                    var name = form.dataset.name || 'este item';
                    Swal.fire({
                        title: 'Confirmação',
                        text: 'Deseja realmente excluir ' + name + '?',
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#d33',
                        confirmButtonText: 'Sim, excluir',
                        cancelButtonText: 'Cancelar'
                    }).then(function (result) {
                        if (result.isConfirmed) {
                            form.submit();
                        }
                    });
                });
            });
        });
    </script>
</body>
</html>