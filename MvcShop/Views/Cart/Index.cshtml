@model List<MvcShop.Models.CartItem>

@{
    ViewData["Title"] = "Carrinho";
}

<div class="container py-4">
    <h2 class="mb-4">Seu Carrinho</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info">Seu carrinho está vazio. <a href="/Products">Continue comprando</a></div>
    }
    else
    {
        <div class="row">
            <div class="col-md-8">
                <table class="table">
                    <thead><tr><th>Produto</th><th>Preço</th><th style="width:120px">Qtd</th><th>Total</th><th></th></tr></thead>
                    <tbody>
                    @foreach(var it in Model)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <img src="@(it.Product.ImageUrl ?? "https://via.placeholder.com/80x80")" style="width:80px;height:80px;object-fit:cover;border-radius:.5rem;margin-right:.75rem" />
                                    <div>
                                        <div class="fw-bold">@it.Product.Name</div>
                                        <div class="text-muted small">@it.Product.Category?.Name</div>
                                    </div>
                                </div>
                            </td>
                            <td>@String.Format("{0:C}", it.Product.Price)</td>
                            <td>
                                <form method="post" asp-controller="Cart" asp-action="Update" class="d-flex">
                                    <input type="hidden" name="productId" value="@it.Product.Id" />
                                    <input type="number" name="quantity" value="@it.Quantity" min="0" class="form-control form-control-sm" />
                                    <button class="btn btn-sm btn-primary ms-2">Salvar</button>
                                </form>
                            </td>
                            <td>@String.Format("{0:C}", it.Product.Price * it.Quantity)</td>
                            <td>
                                <form method="post" asp-controller="Cart" asp-action="Remove">
                                    <input type="hidden" name="productId" value="@it.Product.Id" />
                                    <button class="btn btn-sm btn-danger">Remover</button>
                                </form>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
            <div class="col-md-4">
                <div class="card p-3">
                    <h5>Resumo do pedido</h5>
                    <div class="d-flex justify-content-between mt-3">
                        <div>Subtotal</div>
                        <div class="fw-bold">@String.Format("{0:C}", ViewBag.Total)</div>
                    </div>
                    <div class="mt-3">
                        <a class="btn btn-primary w-100">Finalizar compra</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
