@model IEnumerable<MvcShop.Models.Category>

@{
  ViewData["Title"] = "Home";
}

<header class="py-5 bg-light mb-4">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-md-6">
        <h1 class="display-5">Bem-vindo ao MvcShop</h1>
        <p class="lead">Pequena vitrine de exemplo com categorias, cadastro via Ã¡rea administrativa e upload de imagens.</p>
        <p>
          <a class="btn btn-primary btn-lg me-2" href="/Products">Ver Produtos</a>
          <a class="btn btn-outline-secondary btn-lg" href="/Home/Contacts">Contatos</a>
        </p>
      </div>
      <div class="col-md-6 d-none d-md-block">
        <div class="ratio ratio-16x9 shadow-sm rounded">
          <img src="https://via.placeholder.com/800x450?text=Promo+Banner" class="img-fluid rounded" alt="Promo">
        </div>
      </div>
    </div>
  </div>
</header>

<div class="container">
  <h3 class="mb-4">Vitrine por Categoria</h3>
  @foreach(var cat in Model)
  {
    <section class="mb-5">
      <div class="d-flex justify-content-between align-items-center mb-2">
        <h4 class="mb-0">@cat.Name</h4>
        <a class="btn btn-sm btn-link" href="/Products?category=@cat.Id">Ver tudo</a>
      </div>

      <div class="row g-3">
        @foreach(var p in cat.Products.Take(8))
        {
          <div class="col-6 col-sm-4 col-md-3">
            <div class="card h-100 shadow-sm">
              <img src="@(p.ImageUrl ?? "https://via.placeholder.com/300x200?text=Produto")" class="card-img-top" style="height:160px;object-fit:cover;" />
              <div class="card-body d-flex flex-column">
                <h5 class="card-title fs-6">@p.Name</h5>
                <p class="text-muted mb-2">@p.Price.ToString("C")</p>
                <p class="mt-auto"><a href="/Products/Details/@p.Id" class="btn btn-sm btn-primary w-100">Ver detalhes</a></p>
              </div>
            </div>
          </div>
        }
      </div>
    </section>
  }
</div>
