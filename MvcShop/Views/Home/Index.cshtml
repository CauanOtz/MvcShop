@model IEnumerable<MvcShop.Models.Category>

@{
  ViewData["Title"] = "Home";
}

@await Html.PartialAsync("_RandomCarousel")

<div class="container">
  <h3 class="mb-4">Vitrine por Categoria</h3>
  @foreach(var cat in Model)
  {
    <section class="mb-5">
      <div class="d-flex justify-content-between align-items-center mb-2">
        <h4 class="mb-0">@cat.Name</h4>
        <a class="btn btn-sm btn-link" href="/Products?category=@cat.Id">Ver tudo</a>
      </div>

      <div class="row g-3">
        @foreach(var p in cat.Products.Take(8))
        {
          <div class="col-6 col-sm-4 col-md-3">
            <div class="card h-100 shadow-sm">
              <img src="@(p.ImageUrl ?? "https://via.placeholder.com/300x200?text=Produto")" class="card-img-top" style="height:160px;object-fit:cover;" />
              <div class="card-body d-flex flex-column">
                <h5 class="card-title fs-6">@p.Name</h5>
                <p class="text-muted mb-2">@p.Price.ToString("C")</p>
                <p class="mt-auto"><a href="/Products/Details/@p.Id" class="btn btn-sm btn-primary w-100">Ver detalhes</a></p>
              </div>
            </div>
          </div>
        }
      </div>
    </section>
  }
</div>
